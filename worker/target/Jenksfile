pipeline {
  agent any
  tools{
     maven 'Maven 3.6.2'
  }
  stages{
      stage(one){
          steps{
              echo 'compiling worker app'
	      dir('worker'){
	          sh 'mvn compile'
	      }
          }
      }
      stage(two){
          steps{
              echo 'testing worker app'
	      dir('worker'){
                  sh 'mvn clean test'
              }
          }
      }
      stage(three){
          steps{
              echo 'packaging worker app'
	      dir('worker'){
                  sh 'mvn package -DskipTests'
              }
          }
      }
  }

  post{
    always{
        echo 'This pipeline is completed..'
    }
  }
}
