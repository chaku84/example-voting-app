pipeline {
  agent any
  tools{
     nodejs 'NodeJS 8.9.0'
  }
  stages{
      stage(build){
          when{
            changeset "**/result/**"
          }
          steps{
              echo 'compiling result app'
              dir('worker'){
                  sh 'npm compile'
              }
          }
      }
      stage(test){
          when{
            changeset "**/result/**"
          }
          steps{
              echo 'testing result app'
              dir('worker'){
                  sh 'npm clean test'
              }
          }
      }
  }

  post{
    always{
        echo 'This pipeline is completed..'
    }
  }
}
